{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "VideoClip": {
            "properties": {
                "audioSource": {
                    "description": "Relative path to audio file, used instead of video audio",
                    "type": "string"
                },
                "duration": {
                    "description": "Duration. 00:00:00.000 or ms",
                    "type": [
                        "string",
                        "number"
                    ]
                },
                "source": {
                    "description": "Relative path to video file",
                    "type": "string"
                },
                "start": {
                    "description": "Start time. 00:00:00.000 or ms",
                    "type": [
                        "string",
                        "number"
                    ]
                },
                "type": {
                    "const": "video",
                    "type": "string"
                },
                "videoStart": {
                    "description": "Start time within the video file. 00:00:00.000 or ms",
                    "type": [
                        "string",
                        "number"
                    ]
                }
            },
            "required": [
                "duration",
                "source",
                "start",
                "type"
            ],
            "type": "object"
        }
    },
    "properties": {
        "appCommit": {
            "type": "string"
        },
        "audioSampleRate": {
            "type": "integer"
        },
        "childrenTimeline": {
            "items": {
                "$ref": "#/definitions/VideoClip"
            },
            "type": "array"
        },
        "fps": {
            "type": "number"
        },
        "height": {
            "type": "integer"
        },
        "width": {
            "type": "integer"
        }
    },
    "required": [
        "audioSampleRate",
        "childrenTimeline",
        "fps",
        "height",
        "width"
    ],
    "type": "object"
}

